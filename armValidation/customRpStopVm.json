{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue": "jumphost"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CustomProviders/resourceProviders",
            "name": "knpsfun",
            "apiVersion": "2018-09-01-preview",
            "location": "eastus",
            "properties": {
                "resourceTypes": [
                    {
                        "name": "StopVm",
                        "endpoints": [
                            {
                                "enabled": true,
                                "apiVersion": "2018-09-01-preview",
                                "endpointUri": "https://knpsfun.azurewebsites.net/api/",
                                "timeout": "PT1M"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "type": "Microsoft.CustomProviders/resourceProviders/StopVm",
            "name": "knpsfun/StopVm",
            "apiVersion": "2018-09-01-preview",
            "location": "eastus",
            "properties": {
                "vmResourceId": "[resourceId('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
            },
            "dependsOn": [
                "Microsoft.CustomProviders/resourceProviders/knpsfun"
            ]
        }
    ],
    "outputs": {}
}